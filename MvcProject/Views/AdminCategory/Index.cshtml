@using Entity.Concrete
@model List<Category>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Ad</th>
        <th>Sil</th>
        <th>Güncellle</th>
        <th>Başlıklar</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <th>@item.CategoryID</th>
    <td>@item.CategoryName</td>
    
    <td><a href="#" class="btn btn-danger">Sil</a></td>
    <td><a href="#" class="btn btn-warning">Güncelle</a></td>
    <td><a href="#" class="btn btn-primary">Başlıklar</a></td>

</tr>
    }
</table>
<br />
<a href="/AdminCategory/AddCategory" class="btn btn-success"> Yeni Kategori</a>


