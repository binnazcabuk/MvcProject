@using Entity.Concrete
@model List<Category>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">

    <div>
        <div class="row gx-5">
            <div class="col" style="margin-top:10px; margin-bottom:5px;">

            </div>
            <div class="col-7" style="margin-top:15px; margin-bottom:5px; margin-right:15px;">

            </div>
        </div>
    </div>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kategori İşlemleri</h3>

                <div class="card-tools">

                    <a class="btn btn-tool" href="/AdminCategory/AddCategory" title="Yeni Kategori" style="color:darkgreen;">
                        <i class="fas fa-plus"></i>
                        Yeni Kategori
                    </a>

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Aç/Kapat">
                        <i class="fas fa-minus"></i>
                    </button>

                </div>

            </div>

            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 15%">
                                Başlık Adı
                            </th>
                            <th style="width: 10%" class="text-center">
                                Başlığın Durumu
                            </th>
                            <th style="width: 25%">
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                           

                            <tr>
                                <td>
                                    @item.CategoryID
                                </td>
                                <td>
                                    
                                   @item.CategoryName
                                    
                                 
                                </td>
                              

                                <td class="project-state">
                                    <h5> <span > @item.CategoryStatus</span></h5>
                                </td>
                               
                                <td class="project-actions text-right">
                                  
                                    <a class="btn btn-info btn-sm" href="/AdminCategory/UpdateCategory/@item.CategoryID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/AdminCategory/DeleteCategory/@item.CategoryID">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</body>
</html>