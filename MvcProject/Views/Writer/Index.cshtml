@using Entity.Concrete

@model PagedList.IPagedList<Writer>
@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>
<link rel="stylesheet" href="~/Content/PagedList.css" />
<body class="hold-transition sidebar-mini">
    <!-- /.navbar -->
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-">
                <div class="col-sm-6">
                    <h1>Yazarlar Sayfası</h1>

                </div>
                <a href="/Writer/AddWriter/" class="btn btn-tool" style="color:darkgreen; font-size:large; float:right; margin-left:400px; margin-top:3px;">
                    <i class="fas fa-plus"></i>Yeni Yazar
                </a>
            </div>
        </div><!-- /.container-fluid -->
    </section>


    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card card-solid">
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">
                    @foreach (var item in Model)
                    {
                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                            <div class="card bg-light">
                                <div class="card-header text-muted border-bottom-0">
                                    @item.WriterTitle
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-7">
                                            <h2 class="lead"><b>@item.WriterName @item.WriterSurName</b></h2>
                                            <p class="text-muted text-sm"><b>Hakkında: </b>@item.WriterAbout </p>
                                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-mail-bulk"></i></span> Mail: @item.WriterMail</li>

                                            </ul>
                                        </div>
                                        <div class="col-5 text-center">
                                            <img src=@item.WriterImage alt="" class="img-circle img-fluid" style="width:150px; height:120px;">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-center">
                                       
                                        <a href="/Writer/EditWriter/@item.WriterID" class="btn btn-sm btn-primary">
                                            <i class="fas fa-user"></i> Profili Düzenle
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</body>
</html>

@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))