<!DOCTYPE html>
<html>
<head>
    
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--Custom Theme files-->
    <link href="~/AdminLTE-3.0.4/web/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!--//Custom Theme files -->
    <!--web font-->
    <link href='//fonts.googleapis.com/css?family=Questrial' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
    <!--//web font-->
    <!--circle-chart-->
    <script src="~/AdminLTE-3.0.4/web/js/jquery-1.11.1.min.js"></script>
    <!--//circle-chart-->
    <!--ResponsiveTabs-->
    <script src="~/AdminLTE-3.0.4/web/js/easyResponsiveTabs.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#horizontalTab').easyResponsiveTabs({
                type: 'default', //Types: default, vertical, accordion
                width: 'auto', //auto or any width like 600px
                fit: true   // 100% fit in a container
            });
        });
    </script>
    <!--//ResponsiveTabs-->
</head>
<body>
    <!-- main -->
    <div class="main">
        
            <div class="main-info w3l">
               
                <div class="main-row">

                    @foreach (var item in Model)
                    {


                        <div class="profile-grid logo wthree">
                            <img src="~/AdminLTE-3.0.4/web/images/pp.jpg" width="125px" height="177px">
                            <h2>@item.FirstName </h2>
                            <p>@item.AboutShort</p>

                        </div>
                        <h3 class="title">Yeteneklerim</h3>
                        <div class="col-md-6 skills-right bar_group">

                            <div class='bar_group__bar thin' label='@item.Skill1 &nbsp;&nbsp; @item.Rate1%' value='@item.Rate1'></div>
                            <div class='bar_group__bar thin' label='@item.Skill2 &nbsp;&nbsp; @item.Rate2%' value='@item.Rate2%'></div>
                            <div class='bar_group__bar thin' label='@item.Skill3 &nbsp;&nbsp; @item.Rate3%' value='@item.Rate3%'></div>
                            <div class='bar_group__bar thin' label='@item.Skill4 &nbsp;&nbsp; @item.Rate4%' value='@item.Rate4%'></div>
                            <div class='bar_group__bar thin' label='@item.Skill5 &nbsp;&nbsp; @item.Rate5%' value='@item.Rate5%'></div>
                            <div class='bar_group__bar thin' label='@item.Skill6 &nbsp;&nbsp; @item.Rate6%' value='@item.Rate6%'></div>

                        </div>

                     
                        
                        <a class="btn btn-tool" href="/MyTalent/Update/@item.SkillID" style="color:white; font-size:medium">Güncelle</a>
                      



                        <!--bar-js-->
                        <script src="~/AdminLTE-3.0.4/web/js/bars.js"></script>



                    }
                    <div class="clear"> </div>
                </div>
            </div>

        </div>
        <!-- main -->
</body>
</html>
