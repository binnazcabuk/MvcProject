
@{ Layout = null; }

<!doctype html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/login-form-14/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">

            <div class="row justify-content-center">
                <div class="col-md-12 col-lg-10">
                    <div class="wrap d-md-flex">
                        <div class="img" style="background-image: url('../../AdminLTE-3.0.4/login-form-14/images/w1.jpg');  ">
                        </div>
                        <div class="login-wrap p-4 p-md-5">
                            <div class="d-flex">
                                <div class="w-100">
                                    <h3 class="mb-4">Yazar Giriş</h3>
                                </div>
                                <div class="w-100">
                                    <p class="social-media d-flex justify-content-end">
                                        <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
                                        <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
                                    </p>
                                </div>
                            </div>
                            @using (Html.BeginForm("WriterLogin", "Login", FormMethod.Post))
                            {
                                <div class="form-group mb-3">
                                    <label class="label" for="name">Yazar Mail</label>
                                    <input type="text" class="form-control" name="WriterMail" placeholder="Kullanıcı Adı" required>
                                </div>
                                <div class="form-group mb-3">
                                    <label class="label" for="password">Şifre</label>
                                    <input type="password" class="form-control" name="WriterPassword" placeholder="****" required>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-primary rounded submit px-3">Giriş Yap</button>
                                </div>
                                <div class="form-group d-md-flex">
                                    <div class="w-50 text-left">
                                        <label class="checkbox-wrap checkbox-primary mb-0">


                                        </label>
                                    </div>
                                    <div class="w-50 text-md-right">

                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/AdminLTE-3.0.4/login-form-14/js/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-14/js/popper.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-14/js/bootstrap.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-14/js/main.js"></script>

</body>
</html>





